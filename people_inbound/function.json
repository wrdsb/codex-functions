{
  "bindings": [
    {
      "name": "message",
      "type": "serviceBusTrigger",
      "topicName": "people_inbound",
      "subscriptionName": "codex-functions",
      "connection": "AzureWebJobsServiceBus",
      "accessRights": "manage",
      "direction": "in"
    },
    {
      "name": "existingRecord",
      "type": "documentDB",
      "databaseName": "codex",
      "collectionName": "people",
      "connection": "wrdsb-codex_DOCUMENTDB",
      "direction": "in",
      "id": "{id}"
    },
    {
      "name": "updatedRecord",
      "type": "documentDB",
      "databaseName": "codex",
      "collectionName": "people",
      "connection": "wrdsb-codex_DOCUMENTDB",
      "direction": "out"
    }
  ]
}
