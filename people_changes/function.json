{
  "bindings": [
    {
      "name": "message",
      "type": "serviceBusTrigger",
      "topicName": "people_changes",
      "subscriptionName": "codex-functions",
      "connection": "AzureWebJobsServiceBus",
      "accessRights": "manage",
      "direction": "in"
    },
    {
      "name": "$return",
      "type": "sendGrid",
      "direction": "out",
      "apiKey" : "CodexSendGridKey",
      "from": "{FromEmail}",
      "to": "{ToEmail}",
      "subject": "Codex person change"
    }
  ]
}
