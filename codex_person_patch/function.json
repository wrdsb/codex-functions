{
  "bindings": [
    {
      "name": "req",
      "type": "httpTrigger",
      "webHookType": "genericJson",
      "direction": "in",
      "methods": [
        "post"
      ]
    },
    {
      "name": "codexRecordIn",
      "type": "documentDB",
      "databaseName": "wrdsb-codex",
      "collectionName": "codex-people",
      "id" : "{ein}",
      "connection": "wrdsb-codex_DOCUMENTDB",     
      "direction": "in"
    },
    {
      "name": "codexRecordOut",
      "type": "documentDB",
      "databaseName": "wrdsb-codex",
      "collectionName": "codex-people",
      "createIfNotExists": true,
      "connection": "wrdsb-codex_DOCUMENTDB",     
      "direction": "out"
    },
    {
      "name": "res",
      "type": "http",
      "direction": "out"
    }
  ],
  "disabled": false
}
